<caption><h3>Athlete Performance</h3></br> Edition:<%= req.body.edition %> </br>Season:<%= req.body.season %></br> Sport:<%= req.body.sports %> </br> <% if(req.body.events!='NULL') {%> Event:<%= req.body.events %><% }; %></caption>
  <tr>
    <% if (result[0].Sport) { %>
      <th>Sport</th>
    <% } %>
    <th>Event</th>
    <th>Athlete's Name</th>
    <th>Country</th>
    <th>Medal</th>
  </tr>
  <% for(var i=0; i<result.length; i++) {%>
     
     <tr>
      <% if (result[0].Sport) { %>
        <td><%= result[i].Sport %></td>
      <% } %>
       <td><%= result[i].Event %></td>
       <td><%= result[i].Name %></td>
       <td><%= result[i].Country %></td>
       <td><%= result[i].medal %></td>
     </tr>
  <% } %>
</table></center>

<%}%>

<%}%>



<% }; %>

