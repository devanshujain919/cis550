</form>




<% if (isresult) { %>

<% if (result.length==0) {%> <h1> No Olympics were held this year</h1><% } else {%>
  
<% if (choice == true) { %>

<center><table id="t01" border="1">
<caption><h3>Medal Tally</h3></br> Edition:<%= req.body.edition %> </br>Season:<%= req.body.season %></caption>
  <tr>
    <th>Country</th>
    <th>Gold</th>
    <th>Silver</th>
    <th>Bronze</th>
  </tr>
  <% for(var i=0; i<result.length; i++) {%>
     
     <tr>
       <td><%= result[i].Country %></td>
       <td><%= result[i].Gold %></td>
       <td><%= result[i].Silver %></td>
       <td><%= result[i].Bronze %></td>
     </tr>
  
  <% } %>
</table></center>

<%} else {%>
